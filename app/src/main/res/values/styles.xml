<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Black">
        <item name="android:textColor">@color/textcolor_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.White">
        <item name="android:textColor">@color/textcolor_white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Title">
        <item name="android:textColor">#E2E2E2</item>
        <item name="android:textSize">18sp</item>
    </style>
    
        <style name="TextAppearance.Title.Inverse">
        <item name="android:textColor">@color/textcolor_black</item>
    </style>

    <style name="TextAppearance.Large">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.Large.Black">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/textcolor_black</item>
    </style>

    <style name="TextAppearance.Large.Inverse">
        <item name="android:textColor">@color/textcolor_white</item>
    </style>

    <style name="TextAppearance.Small">
        <item name="android:textColor">@color/textcolor_black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Small.Inverse">
        <item name="android:textColor">@color/textcolor_white</item>
    </style>

    <style name="TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textcolor_black</item>
    </style>

    <style name="Widget.ProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_medium_white</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:minWidth">24dip</item>
        <item name="android:maxWidth">24dip</item>
        <item name="android:minHeight">24dip</item>
        <item name="android:maxHeight">24dip</item>
    </style>

    <style name="Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_h_blue</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
    </style>

    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_gray</item>
        <item name="android:textAppearance">@style/TextAppearance.Title</item>
        <item name="android:textColor">#ff919191</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="Button.Dialog" parent="@style/Button.Green"></style>

    <style name="Button.Red" parent="Button.Green">
        <item name="android:background">@drawable/btn_red</item>
        <item name="android:textColor">@color/textcolor_white</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
    </style>

    <style name="Button.Dialog.Ok"></style>

    <style name="Button.Dialog.Cancel" parent="@style/Button"></style>

    <style name="Button.Green" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_green</item>
        <item name="android:textAppearance">@style/TextAppearance.Title</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingRight">15dip</item>
    </style>

    <style name="EditText" parent="@android:style/Widget.EditText">
        <item name="android:minHeight">24dip</item>
        <item name="android:textColor">@color/textcolor_black</item>
    </style>

    <style name="ListView" parent="@android:style/Widget.ListView">
      <!--   <item name="android:listSelector">?android:attr/selectableItemBackground</item> 
       <item name="android:listSelector">@drawable/list_selector_background</item> 
       -->
        <item name="android:divider">@drawable/list_divider</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:cacheColorHint">@null</item>
    </style>
    
    <style name="GridView" parent="@android:style/Widget.Holo.GridView">
        
    </style>

    <style name="TextAppearance.Medium.Inverse">
        <item name="android:textColor">@color/textcolor_white</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textColor">@color/textcolor_black</item>
    </style>

    <style name="PrivacyBox_AcionBarStyle" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ic_actionbar_background</item>
    </style>

    <style name="FSButton_Style">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:textColor">@color/textcolor_white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="CompoundButton.CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_outline</item>
        <item name="android:textColor">@color/textcolor_black</item>
    </style>
    
       <style name="PRIVACYBOX_Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
        <item name="android:windowBackground">@drawable/dialog_bg_nt</item>
    	</style>
    
	<style name="PRIVACYBOX_Theme.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        
   </style>

</resources>